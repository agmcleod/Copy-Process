= form_for([@site, @document]) do |f|
  - if @document.errors.any?
    #error_explanation
      %h2= pluralize(@document.errors.count, "error") |
      prohibited this document from being saved:

      %ul
      - @document.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :content 
    %br
    = f.text_area :content
  .actions
    = f.submit
