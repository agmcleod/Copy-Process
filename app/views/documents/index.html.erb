<h1>Listing documents</h1>

<table>
  <tr>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.content %></td>
    <td><%= link_to 'Show', site_document_path(@site, document) %></td>
    <td><%= link_to 'Edit', edit_site_document_path(@site, document) %></td>
    <td><%= link_to 'Destroy', site_document_path(@site, document), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

